@model DBLink;
<h1>Administration Links Page</h1>

<div class="form-group">
    <form>
    <input type="submit" asp-controller="Home" asp-action="Index" value="Sign out" text="Sign out" class="btn btn-success">
    </form>
</div>
<h2>Add Link</h2>

<div class="row my-2">
    <div class="col">
        <div><p>Enter the link data below:</p></div>

        <form method="post">
            <div class="form-group">
                <label>Category</label>
                <input class="form-control" type="hidden" value="@ViewBag.addLink_categoryID.categoryID" asp-for="categoryID" ReadOnly="True">
                <input class="form-control" type="text" value="@ViewBag.addLink_categoryName.categoryName" ReadOnly="True">
            </div>
            <div class="form-group">
                <label>Link Name:</label>
                <input class="form-control" type="text" asp-for="name" max-length="25">
                    @*<span class="text-danger" asp-validation-for="name"></span>*@
            </div>
            <div class="form-group">
                <label>Link href:</label>
                <input class="form-control" type="text" asp-for="link" maxlength="100"/>
                    @*<span class="text-danger" asp-validation-for="link"></span>*@
            </div>
            <div class="form-group">
                <input type="checkbox" name="pinnedToTop" id="addLink_pinLink" data-val="true" value="true">
                <label class="custom-control-label" for="addLink_pinLink">Toggle to pin link to top</label>
                <input name="pinnedToTop" type="hidden" value="false"/>
            </div>

            <input class="btn btn-success" type="submit" asp-controller="Admin" asp-action="SubmitAddLink" value="Add">
            <a asp-controller="Admin" asp-action="AdminIndex"><input class="btn btn-warning" type="button" value="Cancel"></a>
            
            <div asp-validation-summary="All" class="text-danger"></div>

        </form>
@section scripts {
    <script>startAutoLogout();</script>
}