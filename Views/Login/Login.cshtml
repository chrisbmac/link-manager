@model LinkManager;
<h1>Administration Login</h1>

<form asp-controller="Login" asp-action="Submit">
    <div class="container">
        <div class="row mt-2">
            <div class="col">
                <p>Please enter your Administration Username and Password</p>
            </div>
        </div>

        <div class="row">
            <div class="col mt-2">
                <div class="form-group">
                    <label for="txtUserName">Username:</label>
                    <input type="text" name="myUsername" class="form-control" Maxlength="10" />
                </div>
                <div class="form-group">
                    <label for="txtPassword">Password:</label>
                    <input type="password" name="myPassword" class="form-control" maxlength="10" />
                </div>
                <div class="form-group">
                    <input type="submit" text="Submit" class="btn btn-success" value="Submit"/>
                    <input asp-controller="Home" asp-action="Index" type="submit" text="cancel" value="Cancel" class="btn btn-warning" />
                    <span class="text-warning" style="margin-left:5px;">@ViewData["feedback"]</span>
                </div>
            </div>
        </div>
    </div>
</form>